						  <tr> 
                            <td width="479" colspan="6"> <table height="31" width="100%" border="0" cellspacing="0" cellpadding="0" background="table_view01.gif">
                                <tr> 
                                  <td width="40%" style="padding:0 0 0 63"><font color="#FFFFFF"><b>13<!--244--></b></font></td>
                                  <td width="60%" style="padding:0 0 0 60"><b><font color="#FFFFFF">2004-06-10<!--2004-03-20--></font></b></td>
                                </tr>
